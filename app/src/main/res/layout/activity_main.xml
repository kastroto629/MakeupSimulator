<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp">

    <!-- 제목 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Up Simulator"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:paddingBottom="10dp" />

    <!-- 설명 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the task!!"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:paddingBottom="20dp" />

    <!-- 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnMakeupTransfer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Makeup Transfer" />

        <Button
            android:id="@+id/btnColorControl"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Color Control" />

        <Button
            android:id="@+id/btnEnhanceImage"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Enhance Image" />

        <Button
            android:id="@+id/btnRecommend"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Recommend" />

    </LinearLayout>
</LinearLayout>
